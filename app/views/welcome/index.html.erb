<% if current_user %>
  <h3>Welcome to Phootoo: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h2>Welcome to Phootoo</h2>
      <p class="lead">
        Sign up below to begin your Phootoo journey
      </p>
    </div>
  </div>
  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-3 col-lg-offset-3 plan">
        <h2>Silver Plan</h2>
        <div class="price pull-right">
          Price: $10
        </div>
        <div class="features">
          <ul>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-info sign-up' %>
        </p>
      </div>
      <div class="col-lg-3 plan">
        <h2>Gold Plan</h2>
        <div class="price pull-right">
          Price: $20
        </div>
        <div class="features">
          <ul>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li class='extra'>Unlimited projects</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-info sign-up' %>
        </p>
      </div>
    </div>
  </div>
<% end %>
